mainmenu "Matter nRF Connect Soil Sensor Example Application"

config STATE_LEDS
    bool "Use LEDs to indicate the device state"
    default y

# Thread networking setup
if NET_L2_OPENTHREAD

choice OPENTHREAD_NORDIC_LIBRARY_CONFIGURATION
	default OPENTHREAD_NORDIC_LIBRARY_FTD
endchoice

choice OPENTHREAD_DEVICE_TYPE
	default OPENTHREAD_FTD
endchoice

endif # NET_L2_OPENTHREAD

# Include CHIP (Matter) feature and default definitions
rsource "../connectedhomeip/config/nrfconnect/chip-module/Kconfig.features"
rsource "../connectedhomeip/config/nrfconnect/chip-module/Kconfig.defaults"

# Include Zephyr symbols
source "Kconfig.zephyr"

# --- shim to satisfy CHIP defaults on NCS v2.8 (symbol not present upstream) ---
config BT_BUF_ACL_RX_COUNT_EXTRA
    int
    default 0
    help
      Compatibility shim for NCS v2.8. CHIP defaults may reference this
      symbol; defining it here prevents “defined without a type” warnings.
# -------------------------------------------------------------------------------


# ---- CHIP Wi-Fi reconnection knobs (app-local definitions) ----
config CHIP_WIFI_CONNECTION_RECOVERY_MINIMUM_INTERVAL
    int "CHIP Wi-Fi reconnection min interval (ms)"
    default 1000

config CHIP_WIFI_CONNECTION_RECOVERY_MAXIMUM_INTERVAL
    int "CHIP Wi-Fi reconnection max interval (ms)"
    default 60000

config CHIP_WIFI_CONNECTION_RECOVERY_JITTER
    int "CHIP Wi-Fi reconnection jitter (ms)"
    default 500

config CHIP_WIFI_CONNECTION_RECOVERY_MAX_RETRIES_NUMBER
    int "CHIP Wi-Fi reconnection max retries"
    default 20

config CHIP_WIFI
    bool "Enable CHIP Wi-Fi path"
    default y

config CHIP_DEVICE_COUNTRY_CODE
    string "CHIP device country code"
    default "SE"
    help
      Two-letter ISO 3166-1 country code reported via the Basic Information
      cluster. Configure this to reflect the device's manufacturing locale.

config SOIL_ENDPOINT
    bool "Enable Soil Measurement endpoint"
    default n
    help
      Enable the provisional SoilMeasurement endpoint (EP1). Keep disabled for
      certification builds to avoid advertising provisional clusters.
